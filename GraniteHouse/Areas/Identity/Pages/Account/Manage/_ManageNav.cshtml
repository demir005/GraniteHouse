@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="list-group">
    <li class="list-group"><a asp-page="./Index">Profile</a></li>
    <li class="list-group"><a id="change-password" asp-page="./ChangePassword">Password</a></li>
    @if (hasExternalLogins)
    {
        <li class="list-group"><a id="external-login" asp-page="./ExternalLogins">External logins</a></li>
    }
    <li class="list-group"><a asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>
    <li class="list-group"><a asp-page="./PersonalData">Personal data</a></li>
</ul>
